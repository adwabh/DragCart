<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="3dp"
        android:inputType="numberDecimal"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/cardView_main"
        app:layout_constraintEnd_toEndOf="@+id/textView_amount_static"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView_amount_static" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="3dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView_amount"
        app:layout_constraintEnd_toEndOf="@+id/textView_date_static"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView_date_static"
        app:layout_constraintTop_toBottomOf="@+id/textView_date_static" />

    <TextView
        android:id="@+id/textView_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="3dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView_date"
        app:layout_constraintEnd_toEndOf="@+id/textView_status_static"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView_status_static"
        app:layout_constraintTop_toBottomOf="@+id/textView_status_static" />

    <ImageView
        android:id="@+id/imageView_logo"
        android:layout_width="36dp"
        android:layout_height="39dp"
        android:elevation="@dimen/three_dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView_main"
        app:layout_constraintEnd_toEndOf="@+id/cardView_main"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="@+id/cardView_main"
        app:layout_constraintTop_toTopOf="@+id/cardView_main"
        app:layout_constraintVertical_bias="0.246"
        tools:srcCompat="@tools:sample/avatars" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_main"
        android:layout_width="368dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="@dimen/six_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="3dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_logo"
        app:layout_constraintEnd_toEndOf="@+id/cardView_main"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toEndOf="@+id/imageView_logo"
        app:layout_constraintTop_toTopOf="@+id/cardView_main"
        app:layout_constraintVertical_bias="0.952" />

    <ImageView
        android:id="@+id/imageView_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@+id/cardView_main"
        app:layout_constraintEnd_toEndOf="@+id/cardView_main"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toEndOf="@+id/textView_name"
        app:layout_constraintTop_toTopOf="@+id/cardView_main"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@drawable/ic_notifications_black_24dp" />

    <TextView
        android:id="@+id/textView_amount_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="3dp"
        android:text="@string/amount_text"
        app:layout_constraintBottom_toTopOf="@+id/textView_amount"
        app:layout_constraintEnd_toEndOf="@+id/cardView_main"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView_logo"
        app:layout_constraintTop_toBottomOf="@+id/imageView_logo" />

    <TextView
        android:id="@+id/textView_status_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="3dp"
        android:text="@string/status_text"
        app:layout_constraintEnd_toEndOf="@+id/cardView_main"
        app:layout_constraintStart_toEndOf="@+id/textView_date_static"
        app:layout_constraintTop_toTopOf="@+id/textView_date_static" />

    <TextView
        android:id="@+id/textView_date_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:elevation="3dp"
        android:text="@string/date_text"
        app:layout_constraintEnd_toStartOf="@+id/textView_status_static"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView_amount_static"
        app:layout_constraintTop_toTopOf="@+id/textView_amount_static" />
</android.support.constraint.ConstraintLayout>